<PaperSidenavContainer>
    <PaperSidenav @class="md-whiteframe-z2" @name="detail" @position="right" @open={{detailOpen}} @lockedOpen={{false}} @onToggle={{action (mut detailOpen)}}>
        <PaperToolbar as |toolbar|>
            <toolbar.tools>Right Sidenav</toolbar.tools>
        </PaperToolbar>
        <PaperContent @padding={{true}}>
            <TestNode @testnode={{this.selectedNode}}/>
        </PaperContent>
    </PaperSidenav>
</PaperSidenavContainer>

<PaperList>
    <PaperSubheader>Test Nodes</PaperSubheader>
    {{#each @data as |testnode|}}
        <TestNode @testnode={{testnode}}/>
        <PaperSidenavToggle @name="detail" as |toggleAction|>
            <PaperButton @onClick={{action detailToggled testnode.id}}>Details</PaperButton>
        </PaperSidenavToggle>
    {{/each}}
</PaperList>